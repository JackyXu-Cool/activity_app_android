<resources>
    <!-- Base application theme. Override Material components -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#ffffff</item>
        <item name="colorOnSurface">@color/colorPrimary</item>
        <item name="colorPrimaryDark">#bfbfbf</item>
    </style>

    <!-- Theme without action bar -->
    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <!-- Material button styling -->
    <style name="MaterialButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="backgroundTint">@color/color_selector</item>
    </style>

    <!-- EditText theme -->
    <style name="EditTextTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorControlNormal">#5e5e5c</item>
        <item name="colorControlActivated">#5e5e5c</item>
        <item name="colorControlHighlight">#5e5e5c</item>
    </style>

</resources>