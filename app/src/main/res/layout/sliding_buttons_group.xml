<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="15dp"
    android:orientation="horizontal"
    android:id="@+id/slidingButtons">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/activityDocsButton"
        style="@style/MaterialButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="#000000"
        app:cornerRadius="12dp"
        android:onClick="changeToDocs"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/activityHighlightsButton"
        style="@style/MaterialButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="#000000"
        app:cornerRadius="12dp"
        android:onClick="changeToHighlight"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/activityMomentsButton"
        style="@style/MaterialButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="18sp"
        app:cornerRadius="12dp"
        android:onClick="changeToMoment"/>

</LinearLayout>