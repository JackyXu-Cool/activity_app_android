<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center|top"
    android:layout_weight="1">

    <ImageView
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/line_5"/>

    <include layout="@layout/sliding_buttons_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>

    <ViewFlipper
        android:id="@+id/slidingDisplaySelector"
        android:layout_centerInParent="true"
        android:layout_below="@+id/slidingButtons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <include layout="@layout/activity_docs_page"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <include layout="@layout/activity_hightlight_page"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <include layout="@layout/activity_moment_page"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </ViewFlipper>



</RelativeLayout>