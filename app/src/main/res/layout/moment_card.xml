<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginStart="10dp"
    card_view:cardElevation="8dp"
    android:layout_marginEnd="10dp">

    <RelativeLayout
        android:id="@+id/momentCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp">

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/team_member"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/person_1"
            app:civ_border_color="#FFFFFF"
            app:civ_border_width="2dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_toRightOf="@+id/team_member"
            android:text="Jacky Xu"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_marginStart="5dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/momentContent"
            android:layout_below="@+id/team_member"
            android:layout_marginTop="7dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="社会主义核心价值观是文化软实力的重心。自从文化软实力的概念提出以后，世界各国纷纷加强了对本国文化软实力建设的重视，把它作为争夺发展制高点的重要手段，甚至上升到国家战略的层面。而文化软实力的竞争实质上是核心价值观的竞争。社会主义核心价值观是文化软实力的重心。"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:orientation="horizontal"
            android:layout_below="@+id/momentContent"
            android:layout_alignParentEnd="true">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:src="@drawable/speech_bubble_comment"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:src="@drawable/love"/>

        </LinearLayout>



    </RelativeLayout>


</androidx.cardview.widget.CardView>
